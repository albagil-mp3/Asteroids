{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile-java",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d", "bin",
                "-cp", "src",
                "src/App.java",
                "src/Controller/GameController.java",
                "src/Model/*.java",
                "src/View/*.java"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$javac"],
            "detail": "Compila todos los archivos Java del proyecto"
        },
        {
            "label": "run-java",
            "type": "shell",
            "command": "java",
            "args": ["-cp", "bin", "App"],
            "group": "build",
            "dependsOn": "compile-java",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "detail": "Compila y ejecuta el juego Asteroids"
        }
    ]
}